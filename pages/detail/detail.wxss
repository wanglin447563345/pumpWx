.charts .canvas{
  margin-bottom:60px;
  width:100%;
  height: 300px;
z-index: 1
}
.table {
  border: 0px solid darkgray;
  width: 100%;
  overflow-x: auto;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  border-bottom:1px solid #efefef;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
    height: 3rem;
    line-height: 3rem;
}
.th {
  width: 40%;
  justify-content: center;
  background: #efefef;
  display: flex;
  height: 3rem;
  line-height: 3rem;
  align-items: center;
}