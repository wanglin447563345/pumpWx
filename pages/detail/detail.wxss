/* pages/detail/detail.wxss */
.myTab{
  width: 100%;
  height: 100%;
}
.myTab_nav{
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  padding:5px 0 2px;
  background: #fff;
  justify-content: space-around;
  font-size: 12px;
  border-top:1px solid #ddd;
  z-index: 9999;
}
.myTab_nav>view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.myTab_nav>view.active{
  color: #4fa7e8;
}
.myTab_nav image{
  width: 60rpx;
  height: 60rpx;
}
.myTab_page{
  width:100%;
  height: 100%;
}
.myTab_page>view{
  display: none;
}
.myTab_page>view.active{
  display: block;
  height: 100%;
}
.canvas {
    width: 100%;
    height: 600px;
    transform: scale(0.8);
    margin-right: 30px;
}